<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:padding="15dp"
    android:layout_marginBottom="20dp"
    android:background="@drawable/input_bg"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/imgDonHang"
        android:layout_width="130dp"
        android:layout_height="130dp"
        android:src="@drawable/pizza1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/txtTenDonHang"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:text="Pizza Korean"
        android:textSize="20sp"
        app:layout_constraintStart_toEndOf="@+id/imgDonHang"
        app:layout_constraintTop_toTopOf="@+id/imgDonHang" />


    <TextView
        android:id="@+id/txtTongDonHang"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:text="$10"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="@+id/txtTenDonHang"
        app:layout_constraintTop_toBottomOf="@+id/txtTenDonHang" />

    <TextView
        android:id="@+id/txtTrangThaiDH"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Trạng thái đơn hàng"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="@+id/txtTongDonHang"
        app:layout_constraintTop_toBottomOf="@+id/txtTongDonHang" />
</androidx.constraintlayout.widget.ConstraintLayout>